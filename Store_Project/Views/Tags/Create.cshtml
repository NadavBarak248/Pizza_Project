@model Store_Project.Models.Tag

@{
    ViewData["Title"] = "Create";
}

<h1>Create Tag</h1>
<hr />
<div class="row">
    <div class="col-md-4 backdidplay">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"> </label>
                <input type="color" asp-for="Color" class="form-control"/>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pizza_tag" class="control-label"></label>
                <select asp-for="Pizza_tag" class="form-control" asp-items="@ViewBag.pizzas"></select>
                <span asp-validation-for="Pizza_tag" class="text-danger"></span>
            </div>
            <br />
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a type="button" class="btn btn-info" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



