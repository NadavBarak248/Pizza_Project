@model Store_Project.Models.Topping

@{
    ViewData["Title"] = "Create";
}

<h1>Create Topping</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Toppings_pizza" class="control-label"></label>
                <select asp-for="Toppings_pizza" class="form-control" asp-items="@ViewBag.pizzas"></select>
                <span asp-validation-for="Toppings_pizza" class="text-danger"></span>
            </div>
            <br />
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a type="button" class="btn btn-info" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
