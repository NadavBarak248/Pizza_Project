@model Store_Project.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<h1 class="login_title_font">We are Mon Amour</h1>


<hr />
<div class="row justify-content-center my-auto">
    <div class="col-md-8 col-10 my-5">
       <!--- <div class="row justify-content-center px-3 mb-3"> <img id="logo" src="https://i.imgur.com/PSXxjNY.png"> </div> -->
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group mb-3">
                <span class="input-group-text">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                    </svg>
                </span>
                <!---  <label asp-for="Username" class="control-label form_text_font"></label>   -->
                <input asp-for="Username" class="form-control form-control-light login_input" placeholder="User Name" aria-label="Username" />
                <br />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock" viewBox="0 0 16 16">
                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2zM5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1z" />
                    </svg>
                </span>
                <!---  <label asp-for="Password" class="control-label"></label> -->
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" aria-label="Password" />
                <br />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="row justify-content-center my-3 px-3">
                <input type="submit" value="Login" class="btn btn-outline-danger" />
            </div>
        </form>
        @if (ViewBag.Error != null)
        {
            <div class="text-danger">@ViewBag.Error </div>
        }

    </div>
</div>

<aside>
    <div>
        Not Registered? <a asp-action="Register">Click here</a> to register
    </div>
</aside>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
