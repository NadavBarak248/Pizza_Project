@model Store_Project.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<h1 class="login_title_font">Hello Pizza Lover</h1>
<h2 class="login title_font">Login</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label form_text_font"></label>
                <input asp-for="Username" class="form-control form-control-light login_input" />
                <span asp-validation-for="Username" class="font-weight-bold form_danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-outline-danger" />
            </div>
        </form>
        @if (ViewBag.Error != null)
        {
            <div class="text-danger">@ViewBag.Error </div>
        }

    </div>
</div>

<div>
    Not Registered? <a asp-action="Register">Click here</a> to register
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
