<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Store_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/PizzaCard.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body dir="ltr">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    @*<img src="~/Pictures/MonAmour.jpg" class="logo" width="50" />*@
                    <canvas id="logoCanvas" height="50" width="90"> your browser does not support the HTML canvas tag.</canvas>
                    <br />
                    <b class="active price-shadow">Mon Amour Pizza</b>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-pills btn-outline-danger">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pizzas" asp-action="Menu">Menu</a>
                        </li>


                        @if (Context.User != null && Context.User.Claims != null && Context.User.Claims.Count() > 0)
                        {
                            @if (this.User.IsInRole("Admin"))
                            {
                                <li class="nav-pills btn-outline-danger">
                                    <a class="nav-link text-dark admin_menu" asp-area="" asp-controller="Pizzas" asp-action="index">Pizzas</a>
                                </li>
                                <li class="nav-pills btn-outline-danger">
                                    <a class="nav-link text-dark admin_menu" asp-area="" asp-controller="Tags" asp-action="index">Tags</a>
                                </li>
                                <li class="nav-pills btn-outline-danger">
                                    <a class="nav-link text-dark admin_menu" asp-area="" asp-controller="Toppings" asp-action="index">Toppings</a>
                                </li>
                                <li class="nav-pills btn-outline-danger">
                                    <a class="nav-link text-dark admin_menu" asp-area="" asp-controller="Branches" asp-action="index">Branches</a>
                                </li>
                                <li class="nav-pills btn-outline-danger">
                                    <a class="nav-link text-dark admin_menu" asp-area="" asp-controller="Orders" asp-action="index">Orders</a>
                                </li>
                                <li class="nav-pills btn-outline-danger">
                                    <a class="nav-link text-dark admin_menu" asp-area="" asp-controller="Users" asp-action="RegisterAdmin">Manager registration</a>
                                </li>
                            }

                            // non admin user
                            else
                            {
                                <li class="nav-pills btn-outline-danger">
                                    <a class="nav-link text-dark admin_menu" asp-area="" asp-controller="Orders" asp-action="MyOrders">My Orders</a>
                                </li>
                            }

                            <li class="nav-pills btn-outline-danger">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Logout">Logout</a>
                            </li>
                            <li class="nav-item mr-auto">
                                <div class="nav-link text-dark connected_as"> You are connected as: <b>@Context.User.Identities.FirstOrDefault().Name</b></div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-pills btn-outline-danger">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Mon Amour Pizza
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


    <script src="~/lib/forModal/popper.min.js"></script>
    <script src="~/lib/forModal/bootstrap.min.js"></script>

    <script src="~/js/Canvas.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
